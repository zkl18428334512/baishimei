
.cu-card.dynamic.list>.cu-item.shadow:first-child {
    margin-top: 0;
}
.cu-list.content {
	overflow: hidden;
}
.cu-list.content>.cu-item {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 0 30rpx 30rpx 30rpx;
	/* height: 140upx; */
	background-color: #ffffff;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center
}
.cu-list.content>.cu-item>.cu-avatar {
	position: absolute;
	left: 30rpx
}
.cu-list.content>.cu-item .content.sub {
	width: calc(100% - 60rpx);
}
.cu-item .flex>.flex-twice {
	margin-right: 10rpx;
}
.cu-item .flex>.flex-twice input {
	padding: 0 10rpx;
}
.cu-item .op {
    width: 60rpx;
}
.cu-item .op [class*="cuIcon-"] {
	font-size: 48rpx;
	width: 100%;
    text-align: center;
}

